{
    "name": "react-ssr",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "react-router build",
        "dev": "NODE_ENV=development node -r dotenv/config server.mjs",
        "start": "node --no-warnings -r dotenv/config server.mjs",
        "cleanup": "pnpm dlx rimraf node_modules build .react-router tests-results",
        "test-report": "pnpm dlx serve tests-results -l 9000 -s -n -C",
        "test-coverage": "vitest run --coverage",
        "test-ui": "vitest --ui",
        "test": "vitest --run",
        "lint": "biome lint . --write",
        "check": "biome check . --write",
        "e2e-install": "playwright install --with-deps",
        "e2e-chrome": "playwright test --headed --project Chromium",
        "e2e-firefox": "playwright test --headed --project Firefox",
        "e2e-mobile": "playwright test --headed --project 'Mobile Chrome'",
        "e2e-safari": "playwright test --headed --project Safari",
        "e2e-report": "playwright show-report tests-results/e2e-html",
        "e2e-ui": "playwright test --ui",
        "e2e": "playwright test",
        "typegen": "react-router typegen",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@react-router/express": "^7.1.5",
        "@react-router/node": "^7.1.5",
        "@repo/shared-ui": "workspace:*",
        "compression": "^1.7.5",
        "consola": "^3.4.0",
        "express": "^5.0.1",
        "express-rate-limit": "^7.5.0",
        "helmet": "^8.0.0",
        "isbot": "^5",
        "lucide-react": "^0.475.0",
        "morgan": "^1.10.0",
        "pathe": "^2.0.2",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-router": "^7.1.5",
        "std-env": "^3.8.0",
        "tailwind-variants": "^0.3.1"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@playwright/test": "^1.50.1",
        "@react-router/dev": "^7.1.5",
        "@tailwindcss/vite": "^4.0.4",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.2.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/compression": "^1.7.5",
        "@types/express": "^5.0.0",
        "@types/express-serve-static-core": "^5.0.6",
        "@types/morgan": "^1.9.9",
        "@types/node": "^22.13.1",
        "@types/react": "^19.0.8",
        "@types/react-dom": "^19.0.3",
        "@vitest/coverage-v8": "^3.0.5",
        "@vitest/ui": "^3.0.5",
        "dotenv": "^16.4.7",
        "happy-dom": "^17.0.2",
        "playwright": "^1.50.1",
        "react-router-devtools": "^1.1.4",
        "tailwindcss": "^4.0.4",
        "tailwindcss-motion": "^1.0.1",
        "typescript": "^5.7.3",
        "vite": "^6.1.0",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^3.0.5"
    }
}
